<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="start" controller="mygame.Game">
        <layer childLayout="vertical">
            <panel width="15%" height="25%" align="left" valign="top" childLayout="vertical" backgroundColor="#55a5" padding="10">
                <panel height="*" padding="10" childLayout="horizontal">
                    <text text="Energy: " color="#222f" font="Interface/Fonts/Default.fnt" width="50%" height="100%"/>
                    <control id="energy" name="label" color="#222f" font="Interface/Fonts/Default.fnt" text="123" width="50%" height="100%" />
                    <!-- add your content here -->
                </panel>
                <panel height="*" padding="10" childLayout="horizontal">
                    <text text="Selected: " color="#222f" font="Interface/Fonts/Default.fnt" width="50%" height="100%"/>
                    <control id="selected" name="label" color="#222f" font="Interface/Fonts/Default.fnt" text="-" width="50%" height="100%" />
                    <!-- add your content here -->
                </panel>
                <panel height="*" childLayout="horizontal" padding="10">
                    <control id="chassis1" name="checkbox" checked="false" />
                    <text text="chassis1" color="#222f" font="Interface/Fonts/Default.fnt" width="50%" height="100%"/>
                </panel>
                <panel height="10px" />
                <panel height="21px" childLayout="horizontal">
                    <control id="buttonAdd" name="button" label="Add" 
                             visibleToMouse="true">
                        <interact onClick="onAddUnitClick()"/>
                    </control>
                    <panel width="*" />
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>